<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.Default" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.App.Default</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>